{
    "name": "crescat/saloon-sdk-generator",
    "description": "Convert Postman Collections to PHP SDKs using Saloon.",
    "keywords": [
        "sdk generator",
        "saloon"
    ],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Helge Sverre",
            "email": "helge.sverre@crescat.io"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel-zero/framework": "^10.0.2",
        "nette/php-generator": "^4.0",
        "nunomaduro/termwind": "^1.15.1",
        "sammyjo20/saloon-laravel": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.8",
        "mockery/mockery": "^1.5.1",
        "pestphp/pest": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "build:paddle": "./codegen generate:postman tests/Samples/paddle.json --output tests/Build/paddle",
        "build:stripe": "./codegen generate:postman tests/Samples/stripe.json --output tests/Build/stripe",
        "build:tableau": "./codegen generate:postman tests/Samples/tableau.json --output tests/Build/tableau",
        "build:openai": "./codegen generate:postman tests/Samples/openai.json --output tests/Build/openai",
        "build:all": [
            "@build:paddle",
            "@build:stripe",
            "@build:tableau",
            "@build:openai"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": [
        "codegen"
    ]
}
