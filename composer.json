{
    "name": "crescat/saloon-sdk-generator",
    "description": "Convert Postman Collections to PHP SDKs using Saloon.",
    "keywords": [
        "sdk generator",
        "saloon"
    ],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Helge Sverre",
            "email": "helge.sverre@crescat.io"
        }
    ],
    "require": {
        "php": "^8.1",
        "cebe/php-openapi": "^1.7",
        "laravel-zero/framework": "^10.0.2",
        "nette/php-generator": "^4.0",
        "nunomaduro/termwind": "^1.15.1",
        "saloonphp/laravel-plugin": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.8",
        "mockery/mockery": "^1.5.1",
        "pestphp/pest": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "Crescat\\SaloonSdkGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "build:paddle": "./codegen generate:sdk --force --type=postman --name=Paddle tests/Samples/paddle.json --output tests/Build/Paddle",
        "build:stripe": "./codegen generate:sdk --force --type=postman --name=Stripe tests/Samples/stripe.json --output tests/Build/Stripe",
        "build:tableau": "./codegen generate:sdk --force --type=postman --name=Tableau tests/Samples/tableau.json --output tests/Build/Tableau",
        "build:openai": "./codegen generate:sdk --force --type=postman --name=OpenAI tests/Samples/openai.json --output tests/Build/Openai",
        "build:fiken": "./codegen generate:sdk --force --type=openapi --name=Fiken tests/Samples/fiken.yml --output tests/Build/Fiken",
        "build:tripletex": "./codegen generate:sdk --force --type=openapi --name=Tripletex tests/Samples/tripletex.json --output tests/Build/Tripletex",
        "build:all": [
            "@build:paddle",
            "@build:tableau",
            "@build:openai",
            "@build:fiken",
            "@build:tripletex",
            "@build:stripe"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": [
        "codegen"
    ]
}
